<h2> <%= @recipe.title %></h2>

<h3>Ingredients</h2>

<ul>
<% @recipe.ingredients.each do |ingredient| %>
  <li><%= "#{ingredient.name} X #{ingredient.quantity}" %></li>
<% end %>
</ul>

<h4><%= @recipe.title %></h4>
<ul>
  <% @recipe.ingredients.each do |ing| %>
    <li> <%= ing.name %> X <%= ing.quantity %>
  <% end %>
</ul>
